{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "types": ["node", "hardhat"],
    "moduleResolution": "node"
  },
  "include": ["./deploy", "./tasks", "./hardhat.config.ts"],
  "exclude": ["node_modules", "dist"]
}


